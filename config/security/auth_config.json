{
  "authentication": {
    "jwt": {
      "algorithm": "HS256",
      "expiresIn": "24h",
      "refreshTokenExpiresIn": "7d",
      "issuer": "ai-cicd-system",
      "audience": "ai-cicd-api"
    },
    "mfa": {
      "enabled": true,
      "required": false,
      "providers": ["totp", "sms", "email"],
      "backupCodes": {
        "enabled": true,
        "count": 10
      }
    },
    "session": {
      "timeout": 1800000,
      "maxConcurrentSessions": 5,
      "secureOnly": true,
      "sameSite": "strict"
    },
    "passwordPolicy": {
      "minLength": 8,
      "maxLength": 128,
      "requireUppercase": true,
      "requireLowercase": true,
      "requireNumbers": true,
      "requireSpecialChars": true,
      "preventReuse": 5,
      "maxAge": 7776000000
    },
    "lockout": {
      "maxAttempts": 5,
      "lockoutDuration": 900000,
      "progressiveDelay": true
    }
  },
  "oauth2": {
    "providers": {
      "google": {
        "enabled": true,
        "clientId": "${GOOGLE_CLIENT_ID}",
        "clientSecret": "${GOOGLE_CLIENT_SECRET}",
        "scope": ["openid", "profile", "email"],
        "redirectUri": "/auth/google/callback"
      },
      "github": {
        "enabled": true,
        "clientId": "${GITHUB_CLIENT_ID}",
        "clientSecret": "${GITHUB_CLIENT_SECRET}",
        "scope": ["user:email"],
        "redirectUri": "/auth/github/callback"
      },
      "microsoft": {
        "enabled": false,
        "clientId": "${MICROSOFT_CLIENT_ID}",
        "clientSecret": "${MICROSOFT_CLIENT_SECRET}",
        "scope": ["openid", "profile", "email"],
        "redirectUri": "/auth/microsoft/callback"
      }
    },
    "pkce": {
      "enabled": true,
      "codeChallenge": "S256"
    }
  },
  "apiKeys": {
    "enabled": true,
    "defaultExpiration": "1y",
    "maxKeysPerUser": 10,
    "keyPrefix": "ak_",
    "rotation": {
      "enabled": true,
      "warningPeriod": 2592000000,
      "autoRotate": false
    }
  },
  "serviceToService": {
    "enabled": true,
    "mutualTLS": {
      "enabled": true,
      "certificateValidation": "strict"
    },
    "hmacSignature": {
      "enabled": true,
      "algorithm": "sha256",
      "timestampTolerance": 300
    }
  },
  "security": {
    "encryption": {
      "algorithm": "aes-256-gcm",
      "keyRotation": {
        "enabled": true,
        "interval": 2592000000
      }
    },
    "rateLimit": {
      "enabled": true,
      "windowMs": 900000,
      "maxRequests": 100,
      "skipSuccessfulRequests": false
    },
    "cors": {
      "enabled": true,
      "origin": ["http://localhost:3000", "https://yourdomain.com"],
      "credentials": true,
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
    },
    "headers": {
      "hsts": {
        "enabled": true,
        "maxAge": 31536000,
        "includeSubDomains": true,
        "preload": true
      },
      "contentSecurityPolicy": {
        "enabled": true,
        "directives": {
          "defaultSrc": ["'self'"],
          "scriptSrc": ["'self'", "'unsafe-inline'"],
          "styleSrc": ["'self'", "'unsafe-inline'"],
          "imgSrc": ["'self'", "data:", "https:"],
          "connectSrc": ["'self'"],
          "fontSrc": ["'self'"],
          "objectSrc": ["'none'"],
          "mediaSrc": ["'self'"],
          "frameSrc": ["'none'"]
        }
      },
      "xFrameOptions": "DENY",
      "xContentTypeOptions": "nosniff",
      "referrerPolicy": "strict-origin-when-cross-origin"
    }
  },
  "compliance": {
    "soc2": {
      "enabled": true,
      "controls": {
        "CC6.1": "logical_access_controls",
        "CC6.2": "authentication_controls",
        "CC6.3": "authorization_controls",
        "CC6.6": "logical_access_removal",
        "CC6.7": "data_transmission_controls"
      }
    },
    "gdpr": {
      "enabled": true,
      "dataRetention": {
        "defaultPeriod": 31536000000,
        "categories": {
          "authentication": 94608000000,
          "audit": 220752000000,
          "personal": 31536000000
        }
      },
      "dataProcessing": {
        "lawfulBasis": "legitimate_interest",
        "consentRequired": false,
        "dataMinimization": true
      }
    },
    "hipaa": {
      "enabled": false,
      "safeguards": {
        "administrative": true,
        "physical": true,
        "technical": true
      }
    }
  },
  "monitoring": {
    "auditLogging": {
      "enabled": true,
      "level": "info",
      "events": [
        "authentication",
        "authorization",
        "data_access",
        "configuration_changes",
        "security_events"
      ]
    },
    "alerting": {
      "enabled": true,
      "channels": ["email", "slack", "webhook"],
      "thresholds": {
        "failedLogins": 10,
        "suspiciousActivity": 5,
        "dataAccess": 100
      }
    },
    "metrics": {
      "enabled": true,
      "retention": 2592000000,
      "aggregation": "1h"
    }
  }
}

