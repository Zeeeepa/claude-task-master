{
  "name": "@taskmaster/database",
  "version": "1.0.0",
  "description": "PostgreSQL database layer for the Unified CI/CD Orchestration System",
  "type": "module",
  "main": "lib/DatabaseManager.js",
  "scripts": {
    "setup": "node scripts/setup_database.js setup",
    "reset": "node scripts/setup_database.js reset",
