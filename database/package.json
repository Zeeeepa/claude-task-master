    "pg": "^8.11.3"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "database",
    "postgresql",
    "migration",
    "orm",
    "taskmaster",
    "cicd"
