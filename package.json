{
	"name": "task-master-ai",
	"version": "0.15.0",
	"description": "A task management system for ambitious AI-driven development that doesn't overwhelm and confuse Cursor.",
	"main": "index.js",
	"type": "module",
	"bin": {
		"task-master": "bin/task-master.js",
		"task-master-mcp": "mcp-server/server.js",
		"task-master-ai": "mcp-server/server.js"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "node src/index.js",
		"dev": "node scripts/dev.js",
		"init": "node scripts/init.js",
		"task": "node scripts/task.js",
		"mcp": "node mcp-server/server.js",
		"mcp:dev": "node mcp-server/server.js --dev",
		"mcp:install": "node scripts/install-mcp.js",
		"mcp:uninstall": "node scripts/uninstall-mcp.js",
		"mcp:test": "node mcp-server/test.js",
		"mcp:validate": "node mcp-server/validate.js",
		"demo:examples": "node -e \"import('./src/requirement_analyzer/examples.js').then(m => m.runAllExamples())\"",
		"ai-cicd:demo": "node src/ai_cicd_system/examples/usage_example.js",
		"ai-cicd:basic": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.basicRequirementProcessing())\"",
		"ai-cicd:advanced": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.advancedSystemUsage())\"",
		"ai-cicd:components": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.componentLevelUsage())\"",
		"webhook:start": "node -e \"import('./src/webhooks/index.js').then(m => m.startWebhookSystem())\"",
		"webhook:test": "node -e \"import('./src/webhooks/test_webhook_system.js').then(m => m.runWebhookTests())\"",
		"webhook:performance": "node -e \"import('./src/webhooks/test_webhook_system.js').then(m => m.runPerformanceTests())\"",
		"webhook:integration": "node -e \"import('./src/webhooks/test_webhook_system.js').then(m => m.runIntegrationTests())\"",
		"webhook:examples": "node -e \"import('./src/webhooks/examples/usage_example.js').then(m => m.runAllExamples())\"",
		"webhook:dev": "NODE_ENV=development node -e \"import('./src/webhooks/index.js').then(m => m.startWebhookSystem())\"",
		"webhook:prod": "NODE_ENV=production node -e \"import('./src/webhooks/index.js').then(m => m.startWebhookSystem())\"",
		"workflow-demo": "node src/workflow_orchestrator/demo.js"
	},
	"keywords": [
		"claude",
		"task",
		"management",
		"ai",
		"development",
		"cursor",
		"anthropic",
		"llm",
		"mcp",
		"context"
	],
	"author": "Eyal Toledano",
	"license": "MIT WITH Commons-Clause",
	"dependencies": {
		"@anthropic-ai/sdk": "^0.30.1",
		"@fastmcp/sdk": "^0.1.0",
		"@google-ai/generativelanguage": "^2.7.0",
		"@google/generative-ai": "^0.21.0",
		"@model-context-protocol/sdk": "^1.0.4",
		"@octokit/rest": "^21.0.2",
		"chalk": "^5.3.0",
		"commander": "^12.1.0",
		"dotenv": "^16.4.5",
		"express": "^4.21.1",
		"google-auth-library": "^9.14.1",
		"inquirer": "^12.0.0",
		"openai": "^4.73.0",
		"uuid": "^11.0.3",
		"zod": "^3.23.8"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eyaltoledano/claude-task-master.git"
	},
	"homepage": "https://github.com/eyaltoledano/claude-task-master#readme",
	"bugs": {
		"url": "https://github.com/eyaltoledano/claude-task-master/issues"
	},
	"files": [
		"scripts/**",
		"assets/**",
		".cursor/**",
		"README-task-master.md",
		"index.js",
		"bin/**",
		"mcp-server/**",
		"src/**"
	],
	"overrides": {
		"node-fetch": "^3.3.2",
		"whatwg-url": "^11.0.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.28.1",
		"@types/jest": "^29.5.14",
		"execa": "^8.0.1",
		"ink": "^5.0.1",
		"jest": "^29.7.0",
		"jest-environment-node": "^29.7.0",
		"mock-fs": "^5.5.0",
		"node-fetch": "^3.3.2",
		"prettier": "^3.5.3",
		"react": "^18.3.1",
		"supertest": "^7.1.0",
		"tsx": "^4.16.2"
	}
}
