{
	"name": "claude-task-master",
	"version": "1.0.0",
	"description": "An AI-powered task-management system you can drop into Cursor, Lovable, Windsurf, Roo, and others.",
	"type": "module",
	"main": "bin/task-master.js",
	"bin": {
		"task-master": "bin/task-master.js",
		"task-master-ai": "mcp-server/server.js"
	},
	"scripts": {
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"test:ui": "vitest --ui",
		"dev": "node scripts/dev.js",
		"build": "echo 'No build step required'",
		"start": "node scripts/dev.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"demo:examples": "node -e \"import('./src/requirement_analyzer/examples.js').then(m => m.runAllExamples())\"",
		"ai-cicd:demo": "node src/ai_cicd_system/examples/usage_example.js",
		"ai-cicd:basic": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.basicRequirementProcessing())\"",
		"ai-cicd:advanced": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.advancedSystemUsage())\"",
		"ai-cicd:components": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.componentLevelUsage())\"",
		"agentapi:demo": "node -e \"import('./src/ai_cicd_system/middleware/agentapi/index.js').then(m => m.quickSetup.development().then(i => console.log('AgentAPI Integration Demo:', i.getStatus())))\"",
		"agentapi:health": "node -e \"import('./src/ai_cicd_system/middleware/agentapi/index.js').then(m => m.quickSetup.development().then(i => console.log('Health Status:', i.healthMonitor.getHealthSummary())))\"",
		"agentapi:test": "vitest src/ai_cicd_system/middleware/agentapi/",
		"mcp:server": "node mcp-server/server.js",
		"mcp:dev": "nodemon mcp-server/server.js",
		"mcp:test": "vitest mcp-server/",
		"workflow-demo": "node src/workflow_orchestrator/demo.js"
	},
	"keywords": [
		"ai",
		"task-management",
		"automation",
		"claude",
		"anthropic",
		"mcp",
		"model-context-protocol",
		"agentapi",
		"middleware",
		"integration"
	],
	"author": "Claude Task Master Team",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Zeeeepa/claude-task-master.git"
	},
	"bugs": {
		"url": "https://github.com/Zeeeepa/claude-task-master/issues"
	},
	"homepage": "https://github.com/Zeeeepa/claude-task-master#readme",
	"dependencies": {
		"@anthropic-ai/sdk": "^0.32.1",
		"@changesets/cli": "^2.27.10",
		"@modelcontextprotocol/sdk": "^1.0.4",
		"@octokit/rest": "^21.0.2",
		"@types/node": "^22.10.2",
		"axios": "^1.7.9",
		"chalk": "^5.4.1",
		"chokidar": "^4.0.1",
		"commander": "^12.1.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"eventsource": "^4.0.0",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"express-slow-down": "^2.0.3",
		"fs-extra": "^11.2.0",
		"glob": "^11.0.0",
		"helmet": "^8.0.0",
		"inquirer": "^12.1.0",
		"js-yaml": "^4.1.0",
		"jsonwebtoken": "^9.0.2",
		"lodash": "^4.17.21",
		"node-cron": "^3.0.3",
		"ollama-ai-provider": "^1.2.0",
		"openai": "^4.73.1",
		"uuid": "^11.0.3",
		"winston": "^3.17.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@types/jest": "^29.5.14",
		"@vitest/coverage-v8": "^2.1.8",
		"@vitest/ui": "^2.1.8",
		"eslint": "^9.17.0",
		"globals": "^15.13.0",
		"jest": "^29.7.0",
		"nodemon": "^3.1.9",
		"prettier": "^3.4.2",
		"vitest": "^2.1.8"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}

