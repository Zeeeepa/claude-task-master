{
	"name": "task-master-ai",
	"version": "0.15.0",
	"description": "A task management system for ambitious AI-driven development that doesn't overwhelm and confuse Cursor.",
	"main": "index.js",
	"type": "module",
	"bin": {
		"task-master": "bin/task-master.js",
		"task-master-mcp": "mcp-server/server.js",
		"task-master-ai": "mcp-server/server.js"
	},
	"scripts": {
		"start": "node bin/task-master.js",
		"dev": "nodemon bin/task-master.js",
		"test": "node --experimental-vm-modules node_modules/.bin/jest",
		"test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
		"test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
		"test:e2e": "./tests/e2e/run_e2e.sh",
		"test:e2e-report": "./tests/e2e/run_e2e.sh --analyze-log",
		"test:requirement-analyzer": "node --experimental-vm-modules node_modules/.bin/jest tests/requirement_analyzer.test.js",
		"demo:requirement-analyzer": "node demo/requirement_analyzer_demo.js",
		"demo:examples": "node -e \"import('./src/requirement_analyzer/examples.js').then(m => m.runAllExamples())\"",
		"ai-cicd:demo": "node src/ai_cicd_system/examples/usage_example.js",
		"ai-cicd:basic": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.basicRequirementProcessing())\"",
		"ai-cicd:advanced": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.advancedSystemUsage())\"",
		"ai-cicd:components": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.componentLevelUsage())\"",
		"agentapi:start": "node src/ai_cicd_system/agentapi/middleware_server.js",
		"agentapi:dev": "nodemon src/ai_cicd_system/agentapi/middleware_server.js",
		"agentapi:test": "node --experimental-vm-modules node_modules/.bin/jest tests/agentapi/",
		"agentapi:test:watch": "node --experimental-vm-modules node_modules/.bin/jest tests/agentapi/ --watch",
		"prepare": "chmod +x bin/task-master.js mcp-server/server.js",
		"changeset": "changeset",
		"release": "changeset publish",
		"docs": "jsdoc -c jsdoc.conf.json",
		"inspector": "npx @modelcontextprotocol/inspector node mcp-server/server.js",
		"mcp-server": "node mcp-server/server.js",
		"format-check": "prettier --check .",
		"format": "prettier --write .",
		"workflow-demo": "node src/workflow_orchestrator/demo.js"
	},
	"keywords": [
		"claude",
		"task",
		"management",
		"ai",
		"development",
		"cursor",
		"anthropic",
		"llm",
		"mcp",
		"context"
	],
	"author": "Eyal Toledano",
	"license": "MIT WITH Commons-Clause",
	"dependencies": {
		"@ai-sdk/anthropic": "^1.1.5",
		"@ai-sdk/google": "^1.1.5",
		"@ai-sdk/mistral": "^1.1.5",
		"@ai-sdk/openai": "^1.3.20",
		"@ai-sdk/perplexity": "^1.1.7",
		"@ai-sdk/xai": "^1.2.15",
		"@anthropic-ai/claude-code": "^1.0.3",
		"@anthropic-ai/sdk": "^0.39.0",
		"@google/generative-ai": "^0.21.0",
		"@modelcontextprotocol/sdk": "^1.0.4",
		"@openrouter/ai-sdk-provider": "^0.4.5",
		"ai": "^4.3.10",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"axios": "^1.6.0",
		"bcrypt": "^5.1.1",
		"bottleneck": "^2.19.5",
		"boxen": "^8.0.1",
		"chalk": "^5.4.1",
		"cli-table3": "^0.6.5",
		"commander": "^12.1.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"express-slow-down": "^2.0.3",
		"express-validator": "^7.2.0",
		"fastmcp": "^1.20.5",
		"figlet": "^1.8.0",
		"fs-extra": "^11.2.0",
		"glob": "^11.0.0",
		"helmet": "^8.0.0",
		"inquirer": "^12.1.0",
		"js-yaml": "^4.1.0",
		"lodash": "^4.17.21",
		"node-cron": "^3.0.3",
		"ollama-ai-provider": "^1.2.0",
		"openai": "^4.89.0",
		"ora": "^8.2.0",
		"pg": "^8.16.0",
		"pg-pool": "^3.10.0",
		"retry": "^0.13.1",
		"socket.io": "^4.8.1",
		"uuid": "^11.1.0",
		"ws": "^8.18.2",
		"zod": "^3.23.8"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eyaltoledano/claude-task-master.git"
	},
	"homepage": "https://github.com/eyaltoledano/claude-task-master#readme",
	"bugs": {
		"url": "https://github.com/eyaltoledano/claude-task-master/issues"
	},
	"files": [
		"scripts/**",
		"assets/**",
		".cursor/**",
		"README-task-master.md",
		"index.js",
		"bin/**",
		"mcp-server/**",
		"src/**"
	],
	"overrides": {
		"node-fetch": "^3.3.2",
		"whatwg-url": "^11.0.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.28.1",
		"@types/jest": "^29.5.14",
		"execa": "^8.0.1",
		"ink": "^5.0.1",
		"jest": "^29.7.0",
		"jest-environment-node": "^29.7.0",
		"mock-fs": "^5.5.0",
		"node-fetch": "^3.3.2",
		"prettier": "^3.5.3",
		"react": "^18.3.1",
		"supertest": "^7.1.0",
		"tsx": "^4.16.2"
	}
}
