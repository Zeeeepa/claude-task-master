{
	"name": "claude-task-master",
	"version": "1.0.0",
	"description": "An AI-powered task-management system you can drop into Cursor, Lovable, Windsurf, Roo, and others.",
	"main": "bin/task-master.js",
	"type": "module",
	"bin": {
		"task-master": "./bin/task-master.js"
	},
	"scripts": {
		"start": "node bin/task-master.js",
		"start:comprehensive-cicd": "node src/comprehensive_cicd/api_server.js",
		"dev": "node --watch bin/task-master.js",
		"test": "node --experimental-vm-modules node_modules/.bin/jest",
		"test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
		"test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
		"test:e2e": "./tests/e2e/run_e2e.sh",
		"test:e2e-report": "./tests/e2e/run_e2e.sh --analyze-log",
		"test:requirement-analyzer": "node --experimental-vm-modules node_modules/.bin/jest tests/requirement_analyzer.test.js",
		"demo:requirement-analyzer": "node demo/requirement_analyzer_demo.js",
		"demo:examples": "node -e \"import('./src/requirement_analyzer/examples.js').then(m => m.runAllExamples())\"",
		"demo:comprehensive-cicd": "node -e \"import('./src/comprehensive_cicd/index.js').then(m => m.processRequirement('Create a secure user authentication system with JWT tokens', {project_id: 'demo', enable_validation: true}))\"",
		"db:init": "node -e \"import('./task_storage/index.js').then(m => m.initialize_database())\"",
		"db:test": "node -e \"import('./task_storage/index.js').then(m => m.test_database_connection())\"",
		"db:reset": "node -e \"import('./task_storage/index.js').then(m => m.reset_database())\"",
		"db:metrics": "node -e \"import('./task_storage/index.js').then(m => m.get_database_metrics())\"",
		"wsl2:status": "node -e \"import('./src/comprehensive_cicd/wsl2_manager.js').then(m => m.getWSL2SystemStatus().then(console.log))\"",
		"wsl2:cleanup": "node -e \"import('./src/comprehensive_cicd/wsl2_manager.js').then(m => m.createWSL2Manager().cleanupOldInstances().then(console.log))\"",
		"agentapi:restart": "echo 'AgentAPI restart command - configure based on your setup'",
		"health:check": "node -e \"import('./src/comprehensive_cicd/index.js').then(m => m.healthCheck().then(console.log))\"",
		"prepare": "chmod +x bin/task-master.js mcp-server/server.js",
		"changeset": "changeset",
		"release": "changeset publish",
		"inspector": "npx @modelcontextprotocol/inspector node mcp-server/server.js",
		"mcp-server": "node mcp-server/server.js",
		"format-check": "prettier --check .",
		"format": "prettier --write .",
		"workflow-demo": "node src/workflow_orchestrator/demo.js"
	},
	"keywords": [
		"claude",
		"task-management",
		"ai",
		"productivity",
		"cursor",
		"lovable",
		"windsurf",
		"roo",
		"mcp",
		"model-context-protocol",
		"cicd",
		"codegen",
		"automation",
		"nlp",
		"postgresql",
		"wsl2",
		"validation"
	],
	"author": "Claude Task Master Team",
	"license": "MIT",
	"dependencies": {
		"@anthropic-ai/sdk": "^0.32.1",
		"@changesets/cli": "^2.27.10",
		"@modelcontextprotocol/sdk": "^1.0.4",
		"chalk": "^5.3.0",
		"commander": "^12.1.0",
		"cors": "^2.8.5",
		"express": "^4.21.2",
		"express-rate-limit": "^7.4.1",
		"helmet": "^8.0.0",
		"ora": "^8.1.1",
		"uuid": "^11.0.3",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"jest": "^29.7.0",
		"prettier": "^3.4.2"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Zeeeepa/claude-task-master.git"
	},
	"bugs": {
		"url": "https://github.com/Zeeeepa/claude-task-master/issues"
	},
	"homepage": "https://github.com/Zeeeepa/claude-task-master#readme"
}

