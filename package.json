{
	"name": "task-master-ai",
	"version": "0.15.0",
	"description": "A task management system for ambitious AI-driven development that doesn't overwhelm and confuse Cursor.",
	"main": "index.js",
	"type": "module",
	"bin": {
		"task-master": "bin/task-master.js",
		"task-master-mcp": "mcp-server/server.js",
		"task-master-ai": "mcp-server/server.js"
	},
	"scripts": {
		"start": "node bin/task-master.js",
		"dev": "nodemon bin/task-master.js",
		"test": "node --experimental-vm-modules node_modules/.bin/jest",
		"test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
		"test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
		"lint": "eslint src/ tests/ --ext .js,.mjs",
		"lint:fix": "eslint src/ tests/ --ext .js,.mjs --fix",
		"format": "prettier --write \"src/**/*.{js,mjs,json}\" \"tests/**/*.{js,mjs,json}\"",
		"format:check": "prettier --check \"src/**/*.{js,mjs,json}\" \"tests/**/*.{js,mjs,json}\"",
		"docs": "jsdoc -c jsdoc.config.json",
		"clean": "rm -rf dist/ coverage/ docs/",
		"build": "npm run clean && npm run lint && npm run test",
		"mcp:start": "node mcp-server/server.js",
		"mcp:dev": "nodemon mcp-server/server.js",
		"mcp:test": "node --experimental-vm-modules node_modules/.bin/jest tests/mcp/",
		"db:migrate": "node src/ai_cicd_system/database/migrate.js",
		"db:seed": "node src/ai_cicd_system/database/seed.js",
		"db:reset": "npm run db:migrate && npm run db:seed",
		"ai-cicd:demo": "node src/ai_cicd_system/examples/usage_example.js",
		"ai-cicd:basic": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.basicRequirementProcessing())\"",
		"ai-cicd:advanced": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.advancedSystemUsage())\"",
		"ai-cicd:components": "node -e \"import('./src/ai_cicd_system/examples/usage_example.js').then(m => m.componentLevelUsage())\"",
		"middleware:demo": "node src/middleware/examples/usage-example.js",
		"middleware:basic": "node -e \"import('./src/middleware/examples/usage-example.js').then(m => m.basicUsageExample())\"",
		"middleware:advanced": "node -e \"import('./src/middleware/examples/usage-example.js').then(m => m.advancedConfigurationExample())\"",
		"middleware:monitoring": "node -e \"import('./src/middleware/examples/usage-example.js').then(m => m.realTimeMonitoringExample())\"",
		"middleware:error-handling": "node -e \"import('./src/middleware/examples/usage-example.js').then(m => m.errorHandlingExample())\"",
		"test:middleware": "node --experimental-vm-modules node_modules/.bin/jest tests/middleware/",
		"codegen:demo": "node src/integrations/codegen/examples/usage-example.js",
		"codegen:basic": "node -e \"import('./src/integrations/codegen/examples/usage-example.js').then(m => m.basicTaskProcessing())\"",
		"codegen:batch": "node -e \"import('./src/integrations/codegen/examples/usage-example.js').then(m => m.batchProcessing())\"",
		"codegen:webhook": "node -e \"import('./src/integrations/codegen/examples/usage-example.js').then(m => m.webhookHandling())\"",
		"test:codegen": "node --experimental-vm-modules node_modules/.bin/jest tests/codegen/",
		"prepare": "chmod +x bin/task-master.js mcp-server/server.js",
		"changeset": "changeset",
		"release": "changeset publish",
		"version": "changeset version"
	},
	"keywords": [
		"claude",
		"task",
		"management",
		"ai",
		"development",
		"cursor",
		"anthropic",
		"llm",
		"mcp",
		"context"
	],
	"author": "Eyal Toledano",
	"license": "MIT WITH Commons-Clause",
	"dependencies": {
		"@anthropic-ai/sdk": "^0.32.1",
		"@changesets/cli": "^2.27.11",
		"@modelcontextprotocol/sdk": "^1.0.4",
		"@types/node": "^22.10.2",
		"axios": "^1.7.9",
		"chalk": "^5.4.1",
		"commander": "^12.1.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"eventsource": "^2.0.2",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"express-slow-down": "^2.0.3",
		"fastmcp": "^1.20.5",
		"figlet": "^1.8.0",
		"fs-extra": "^11.2.0",
		"glob": "^11.0.0",
		"inquirer": "^12.1.0",
		"js-yaml": "^4.1.0",
		"lodash": "^4.17.21",
		"minimatch": "^10.0.1",
		"node-cron": "^3.0.3",
		"openai": "^4.77.3",
		"ora": "^8.1.1",
		"pg": "^8.16.0",
		"pg-pool": "^3.10.0",
		"retry": "^0.13.1",
		"uuid": "^11.1.0",
		"ws": "^8.18.2",
		"zod": "^3.23.8"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eyaltoledano/claude-task-master.git"
	},
	"homepage": "https://github.com/eyaltoledano/claude-task-master#readme",
	"bugs": {
		"url": "https://github.com/eyaltoledano/claude-task-master/issues"
	},
	"files": [
		"scripts/**",
		"assets/**",
		".cursor/**",
		"README-task-master.md",
		"index.js",
		"bin/**",
		"mcp-server/**",
		"src/**"
	],
	"overrides": {
		"node-fetch": "^3.3.2",
		"whatwg-url": "^11.0.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.28.1",
		"@types/jest": "^29.5.14",
		"execa": "^8.0.1",
		"ink": "^5.0.1",
		"jest": "^29.7.0",
		"jest-environment-node": "^29.7.0",
		"mock-fs": "^5.5.0",
		"node-fetch": "^3.3.2",
		"prettier": "^3.5.3",
		"react": "^18.3.1",
		"supertest": "^7.1.0",
		"tsx": "^4.16.2"
	}
}
