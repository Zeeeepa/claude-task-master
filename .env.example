# PostgreSQL Task Storage and Context Engine Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=codegen-taskmaster-db
DB_USER=software_developer
DB_PASSWORD=your-secure-password
DB_SSL_MODE=require

# Optional: Cloudflare Database Proxy (for production)
# CLOUDFLARE_DB_URL=your-cloudflare-database-url

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=true

# Performance Configuration
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_COMMAND_TIMEOUT=60

# Optional: Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Optional: Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring and Metrics
PROMETHEUS_PORT=8000
METRICS_ENABLED=true

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# AI Integration Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Webhook Configuration (for external integrations)
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_CONTEXT_CACHING=true

