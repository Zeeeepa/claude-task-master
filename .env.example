# AI Development Orchestrator Configuration

# ===========================================
# Core Orchestrator Settings
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# AI Agent Configuration
# ===========================================

# Codegen SDK Configuration
CODEGEN_TOKEN=your_codegen_token_here
CODEGEN_ORG_ID=your_organization_id_here
CODEGEN_API_URL=https://api.codegen.sh

# Claude Code Configuration
CLAUDE_WEB_CLIENT_CONFIRMATION=your_claude_confirmation_token_here
CLAUDE_API_URL=https://api.anthropic.com

# ===========================================
# AgentAPI Middleware Configuration
# ===========================================

# AgentAPI Settings
AGENT_API_URL=https://agentapi.example.com
AGENT_API_TOKEN=your_agentapi_token_here
AGENT_API_TIMEOUT=30000

# Request Routing
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60000
RETRY_ATTEMPTS=3

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/orchestrator
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Event Storage
EVENT_STORE_RETENTION_DAYS=90
EVENT_STORE_BATCH_SIZE=100

# ===========================================
# Integration Configuration
# ===========================================

# Linear Integration
LINEAR_API_TOKEN=your_linear_token_here
LINEAR_API_URL=https://api.linear.app/graphql
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret_here

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_API_URL=https://api.github.com
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# ===========================================
# WSL2 Deployment Configuration
# ===========================================

# WSL2 Settings
WSL2_INSTANCES=3
WSL2_TIMEOUT=300
WSL2_VALIDATION_ENABLED=true

# Deployment Pipeline
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_TIMEOUT=600
DEPLOYMENT_ROLLBACK_ENABLED=true

# ===========================================
# Monitoring Configuration
# ===========================================

# Metrics Collection
METRICS_ENABLED=true
METRICS_INTERVAL=60000
METRICS_RETENTION_HOURS=168

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Alerting
ALERTS_ENABLED=true
ALERT_WEBHOOK_URL=https://your-alert-webhook.com

# ===========================================
# Security Configuration
# ===========================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# API Security
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# Development Configuration
# ===========================================

# Debug Settings
DEBUG=orchestrator:*
DEBUG_LEVEL=info

# Development Tools
HOT_RELOAD=true
WATCH_FILES=true

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/orchestrator_test
TEST_TIMEOUT=30000

